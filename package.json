{
  "version": "0.1.0",
  "name": "print-stats",
  "description": "Simple web app to print stats.",
  "repository": "https://github.com/byurhanbeyzat/print-stats.git",
  "author": "Byurhan Beyzat <imbyurhan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently 'yarn run server-dev' 'yarn run client-dev'",
    "start": "concurrently 'yarn run server' 'yarn run client'",
    "server": "cd server && yarn run start",
    "client": "cd web && yarn run start",
    "client-dev": "cd web && yarn run dev",
    "server-dev": "cd server && yarn run dev",
    "format": "prettier --write '**/**/*.{js,jsx,json}'"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "prettier": "^1.19.1"
  }
}
